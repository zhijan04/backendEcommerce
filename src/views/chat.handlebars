<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat en Tiempo Real</title>
</head>

<body>
    <ul id="messages"></ul>
    <form id="form" action="">
        <input id="m" autocomplete="off" /><button>Enviar mensaje</button>
    </form>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const user = prompt("Ingrese su email:");

        if (user) {
            $(function () {
                const socket = io();

                socket.emit('set username', user);

                socket.on('chat history', (messages) => {
                    messages.forEach((message) => {
                        $('#messages').append($('<li>').text(`${message.user}: ${message.message}`));
                    });
                });
                socket.on('chat message', (data) => {
                    $('#messages').append($('<li>').text(`${data.user}: ${data.message}`));
                });

                $('form').submit(function () {
                    socket.emit('chat message', $('#m').val());
                    $('#m').val('');
                    return false;
                });
            });
        } else {
            alert('No se ingres√≥ un email, por favor ingresar uno.');
            location.reload();
        }
    </script>
</body>

</html>