<html lang="en">
<head>
    <title>Lista de Productos</title>
</head>
<body>
    <h1>Lista de Productos</h1>
    <ul>
        {{#each products}}
        <hr>
            <li>
                <strong>{{this.title}}</strong> - ${{this.price}}
                <form action="/api/carts/6575ddb4801e056796a39171/product/{{this._id}}" method="post">
                    <input type="hidden" name="productId" value="{{this._id}}">
                    <button type="submit">Agregar al Carrito</button>
                </form>
            </li>
        {{/each}}
    </ul>
    <div>
        <a href="/carts/6575ddb4801e056796a39171">Ir al Carrito</a>
        <hr>
        {{#if pagination.hasPrevPage}}
            <a href="{{pagination.prevLink}}">Página anterior</a>
            <hr>
        {{/if}}
        
        {{#if pagination.hasNextPage}}
            <a href="{{pagination.nextLink}}">Página siguiente</a>
        {{/if}}
    </div>
</body>
</html>